<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF5F5F5"
        android:gravity="center"
        android:orientation="vertical"
        tools:context="com.example.iot_kipas">

        //TextView untuk suhu
        <TextView
            android:id="@+id/textView7"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textAlignment="center"
            android:background="@color/teal_200"
            android:text="suhu"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal" />

        //TextView untuk tampil suhu
        <TextView
            android:id="@+id/tampil_suhu"
            android:layout_width="150dp"
            android:layout_height="120dp"

            android:textAlignment="center"
            android:textSize="30dp"

            android:text=""
            android:gravity="center_horizontal" />

        //TextView untuk pembatas
        <TextView
            android:id="@+id/textView8"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textAlignment="center"
            android:background="@color/teal_200"
            android:text="pembatas"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal" />

        <EditText
            android:id="@+id/pembatasnya"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:textSize="30dp"
            android:textAlignment="center"
            android:ems="10"
            android:inputType="numberDecimal"
            android:gravity="center_horizontal" />

        //button apply
        <Button
            android:id="@+id/ClickPembatas"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="apply"/>


        //Button untuk on/off
        <ToggleButton
            android:id="@+id/toggle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Toggle 1"/>

        <!--        <Button-->
<!--            android:id="@+id/cek"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Check" />-->

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

